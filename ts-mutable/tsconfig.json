{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "rootDir": "./",
    "outDir": "build",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "types": ["node"],
    "typeRoots": [ "node_modules/@types" ]
  },
  "include:": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
